    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "lldb",
            "sourceLanguages": ["rust"],
            "request": "launch",
            "preLaunchTask": "cargo build",
            "program": "${workspaceFolder}/target/debug/bf",
            "args": ["live", "examples/print.bf"],
            "stopOnEntry": false
        },
        {
            "name": "Debug ðŸ“Ž",
            "type": "lldb",
            "sourceLanguages": ["rust"],
            "request": "attach",
            "program": "${workspaceFolder}/target/debug/bf",
            "stopOnEntry": false
        },
        {
            "name": "(Win) Debug",
            "type": "lldb",
            "sourceLanguages": ["rust"],
            "request": "launch",
            "program": "${workspaceFolder}\\target\\debug\\bf",
            "args": ["input-debug"],
            "preLaunchTask": "cargo build",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
