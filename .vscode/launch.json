    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Win) Rust Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\target\\debug\\bf.exe",
            "args": [
                "-s",
                "examples\\a.bf"
            ],
            "preLaunchTask": "cargo build",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
